<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_edit_alarm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.madel.seng403.EditAlarm"
    tools:showIn="@layout/activity_edit_alarm">


    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_button"
        android:layout_alignParentBottom ="true"
        android:layout_centerInParent="true"/>

    <CheckBox
        android:text="repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="TR"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4"
        android:layout_alignBaseline="@+id/radioButton3"
        android:layout_alignBottom="@+id/radioButton3"
        android:layout_toEndOf="@+id/radioButton3" />

    <RadioButton
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5"
        android:layout_alignBaseline="@+id/radioButton4"
        android:layout_alignBottom="@+id/radioButton4"
        android:layout_toEndOf="@+id/radioButton4" />

    <RadioButton
        android:text="W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3"
        android:layout_alignBaseline="@+id/radioButton2"
        android:layout_alignBottom="@+id/radioButton2"
        android:layout_toEndOf="@+id/radioButton2" />

    <RadioButton
        android:text="SN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton7"
        android:layout_alignBaseline="@+id/radioButton6"
        android:layout_alignBottom="@+id/radioButton6"
        android:layout_toEndOf="@+id/radioButton6" />

    <RadioButton
        android:text="T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2"
        android:layout_below="@+id/checkBox"
        android:layout_toEndOf="@+id/radioButton" />

    <RadioButton
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:layout_alignBaseline="@+id/radioButton5"
        android:layout_alignBottom="@+id/radioButton5"
        android:layout_toEndOf="@+id/radioButton5" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_notifications_black_24dp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="enter alarm label"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_above="@+id/checkBox"
        android:layout_alignStart="@+id/imageButton" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:scaleX="0.80"
        android:scaleY="0.80"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repeatCheckBox"
        android:layout_below="@+id/timePicker"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="TR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_TR"
        android:layout_alignBaseline="@+id/verify_W"
        android:layout_alignBottom="@+id/verify_W"
        android:layout_toEndOf="@+id/verify_W" />

    <CheckBox
        android:text="F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_F"
        android:layout_alignBaseline="@+id/verify_TR"
        android:layout_alignBottom="@+id/verify_TR"
        android:layout_toEndOf="@+id/verify_TR" />

    <CheckBox
        android:text="W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_W"
        android:layout_alignBaseline="@+id/verify_T"
        android:layout_alignBottom="@+id/verify_T"
        android:layout_toEndOf="@+id/verify_T" />

    <CheckBox
        android:text="SN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_SN"
        android:layout_alignBaseline="@+id/verify_S"
        android:layout_alignBottom="@+id/verify_S"
        android:layout_toEndOf="@+id/verify_S" />

    <CheckBox
        android:text="T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_T"
        android:layout_below="@+id/repeatCheckBox"
        android:layout_toEndOf="@+id/verify_M" />

    <CheckBox
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_M"
        android:layout_below="@+id/repeatCheckBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verify_S"
        android:layout_alignBaseline="@+id/verify_F"
        android:layout_alignBottom="@+id/verify_F"
        android:layout_toEndOf="@+id/verify_F" />


</RelativeLayout>
